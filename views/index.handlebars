<h1>Eat-Da-Burger!</h1>


<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block eaten=false}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="newBurger">Burger Name: </label>
        <input type="text" id="newBurger" name="name">
    </div>

    <div class="form-group">
        <label for="devour">Devour?</label><br>
        <input type="btn" name="devour" value="1">
    </div>

    <button type="submit">Add Burger</button>
</form>