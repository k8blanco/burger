<h1>Eat-Da-Burger!</h1>

<div class="center-align">
    <iframe src="https://giphy.com/embed/TFz4os23ZxtdTvEqlP" width="209" height="100" frameBorder="0"
        class="giphy-embed" id="sticker"></iframe>
    <p><a href="https://giphy.com/stickers/burger-hamburger-in-n-out-TFz4os23ZxtdTvEqlP"></a></p>
</div>

<div class="container">
    <div class="row">
        <div class="card col s12">
            <div class="col s6">
                <h2>Uneaten Burgers</h2>
                <ul>
                    {{#each burgers}}
                    {{#unless this.devoured}}
                    <li>
                        {{burger_name}}
                        <button class="devour" data-id="{{id}}" data-newDevour="{{devoured}}">DEVOUR!</button>
                    </li>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>

            <div class="col s6">
                <h2>Devoured Burgers</h2>
                <ul>
                    {{#each burgers}}
                    {{#if this.devoured}}
                    <li>
                        {{burger_name}}
                    </li>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="card card-panel hoverable">
            <h2 class="center-align">Add a Burger!</h2>

            <form class="create-form">

                <div class="form-group">
                    <label for="burgerName">Burger Name: </label>
                    <input type="text" id="burgerName">
                </div>

                <button type="submit" id="addBurger">Add Burger</button>

            </form>
        </div>
    </div>

</div>