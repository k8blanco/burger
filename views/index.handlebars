<h1>Eat-Da-Burger!</h1>

<div class="container">
    <div class="row">

        <div class="col-sm">
            <h2>Uneaten Burgers</h2>
            <ul>
                {{#each burgers}}
                    {{#unless this.devoured}}
                        <li>
                            {{burger_name}}
                            <button class="devour" data-id="{{id}}" data-newDevour="{{devoured}}">DEVOUR!</button>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-sm">
            <h2>Devoured Burgers...yum!</h2>
            <ul>
                {{#each burgers}}
                    {{#if this.devoured}}
                        <li>
                            {{burger_name}}
                        </li>
                    {{/if}}
                {{/each}} 
            </ul>
        </div>


    </div>



<h2>Add a Burger</h2>

<form class="create-form">

    <div class="form-group">
        <label for="burgerName">Burger Name: </label>
        <input type="text" id="burgerName">
    </div>

    <button type="submit" id="addBurger">Add Burger</button>

</form>

</div>

